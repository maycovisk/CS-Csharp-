@model ClienteModel
@{
    ViewData["Title"] = "Cofnrimação apagar Cliente";
}

<div class="text-center">
    <h3>Deseja apagar o contato (@Model.Nome) ?</h3>
</div>

<a class="btn btn-block btn-dark" role="button" asp-controller="Cliente" asp-action="Index">Cancelar excluir</a>
<a class="btn btn-block btn-dark" role="button" asp-controller="Cliente" asp-action="Apagar" asp-route-id="@Model.Id">Confimar excluir</a>