@model ClienteModel
@{
    ViewData["Title"] = "Cadastrar Cliente";
}

<div class="text-center">
    

    <h1 class="display-4">Cadastrar Cliente</h1>

    
</div>

<form asp-controller="Cliente" asp-action="Criar" method="post">
    <div class="form-group">
        <label for="nome">Nome Completo</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome completo do cliente...">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="cpf">CPF</label>
        <input type="text" asp-for="Cpf" class="form-control" placeholder="Digite o CPF do cliente...">
        @Html.ValidationMessageFor(x => x.Cpf)
    </div>

    <div class="form-group">
        <label for="telefone">Telefone</label>
        <input type="tel" asp-for="Telefone" class="form-control" placeholder="Digite o telefone do cliente...">
        @Html.ValidationMessageFor(x => x.Telefone)
    </div>

    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Digite o E-mail do cliente...">
    </div>
    
    <button type="submit" class="btn btn-dark">Adicionar</button>
    <a class="btn btn-block btn-dark" asp-controller="Cliente" asp-action="Index" role="button">Voltar</a>
</form>